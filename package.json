  },
  "scripts": {
    "dev": "vite & pnpm style:watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:fix": "eslint --ext .tsx,.ts,.js, --fix ./src --fix",
    "lint:check": "npx prettier --check .",
    "lint:rewrite": "npx prettier --write .",
    "prepare": "husky install",
    "style:watch": "./node_modules/.bin/typed-scss-modules src --watch --ignore \"**/index.scss\""
  },
  "dependencies": {
    "@douyinfe/semi-ui": "^2.10.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "reset-css": "^5.0.1",
    "sass": "^1.52.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@vitejs/plugin-react": "^1.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "typed-scss-modules": "^6.4.1",
    "typescript": "^4.6.3",
    "vite": "^2.9.9"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{ts,tsx}": "eslint --ext .tsx,.ts,.js,.vue --fix ./src"
  }
}
